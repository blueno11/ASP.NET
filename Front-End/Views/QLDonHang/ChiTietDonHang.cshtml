@model ChiTietDonHangViewModel

@{
    ViewData["Title"] = "Chi tiết hóa đơn #" + Model.MaHoaDon;
}

<h2>Chi tiết hóa đơn #@Model.MaHoaDon</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá bán</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChiTietDonHangs)
        {
            <tr>
                <td>@item.TenSanPham</td>
                <td>@item.SoLuong</td>
                <td>@item.GiaBan.ToString("N0") đ</td>
                <td>@item.ThanhTien.ToString("N0") đ</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Tổng tiền</th>
            <th>@Model.TongTien.ToString("N0") đ</th>
        </tr>
    </tfoot>
</table>