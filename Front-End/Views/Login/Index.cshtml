@model Front_End.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null; // Không dùng layout chung để form đăng nhập nổi bật
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #74ebd5 0%, #ACB6E5 100%);
            min-height: 100vh;
        }
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card {
            border: none;
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
            background: rgba(255,255,255,0.95);
            padding: 2.5rem 2rem 2rem 2rem;
            width: 100%;
            max-width: 380px;
        }
        .login-icon {
            font-size: 3.5rem;
            color: #0d6efd;
            margin-bottom: 0.5rem;
        }
        .brand-title {
            font-weight: 700;
            color: #0d6efd;
            letter-spacing: 1px;
        }
        .form-label {
            font-weight: 500;
        }
        .form-control {
            border-radius: 0.75rem;
            min-height: 44px;
            transition: box-shadow 0.2s;
        }
        .form-control:focus {
            box-shadow: 0 0 0 2px #0d6efd33;
            border-color: #0d6efd;
        }
        .btn-primary {
            border-radius: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 8px 0 #0d6efd22;
            transition: background 0.2s, box-shadow 0.2s;
        }
        .btn-primary:hover {
            background: #2563eb;
            box-shadow: 0 4px 16px 0 #0d6efd33;
        }
        .error-message {
            background: #ffeaea;
            color: #d32f2f;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
            margin-top: 0.5rem;
            font-size: 0.97rem;
            text-align: center;
        }
        media (max-width: 500px) {
            .card { padding: 1.5rem 0.5rem; }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="card animate__animated animate__fadeInDown">
            <div class="text-center mb-3">
                <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" alt="Logo" style="width:60px;height:60px;border-radius:50%;box-shadow:0 2px 8px #0d6efd22;">
                <div class="brand-title mt-2 mb-1">Đăng nhập hệ thống</div>
            </div>
            <form asp-action="Index" method="post" autocomplete="off">
                <div class="mb-3">
                    <label asp-for="TenDangNhap" class="form-label">Tài Khoản</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="fa fa-user"></i></span>
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Tên đăng nhập" />
                    </div>
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label">Mật Khẩu</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="fa fa-lock"></i></span>
                        <input asp-for="MatKhau" class="form-control" type="password" placeholder="Mật khẩu" />
                    </div>
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-2">Đăng nhập <i class="fa fa-arrow-right ms-1"></i></button>
                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="error-message">@ViewBag.Error</div>
                }
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
