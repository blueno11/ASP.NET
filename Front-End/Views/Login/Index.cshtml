@model Front_End.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null; // Không dùng layout chung để form đăng nhập nổi bật
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: #f5f6fa;
        }
        .login-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card {
            box-shadow: 0 4px 24px rgba(0,0,0,0.1);
        }
        .login-icon {
            font-size: 3rem;
            color: #0d6efd;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="login-container">
        <div class="card p-4" style="width: 350px;">
            <div class="text-center mb-3">
                <i class="fa fa-user-circle login-icon"></i>
                <h3 class="mt-2">Đăng nhập</h3>
            </div>
            <form asp-action="Index" method="post">
                <div class="mb-3">
                    <label asp-for="TenDangNhap" class="form-label">Tài Khoản</label>
                    <input asp-for="TenDangNhap" class="form-control" placeholder="Tên đăng nhập" />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MatKhau" class="form-label">Mật Khẩu</label>
                    <input asp-for="MatKhau" class="form-control" type="password" placeholder="Mật khẩu" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                <div class="mt-2">
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <span class="text-danger">@ViewBag.Error</span>
                    }
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
