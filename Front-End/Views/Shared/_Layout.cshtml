@{
    var vaiTro = Context.Session.GetString("VaiTro");
    var tenDangNhap = Context.Session.GetString("TenDangNhap");
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Điện Máy Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-cube"></i>
                    <div class="logo-text">
                        <h4>Điện Máy Store</h4>
                        <small>Admin Panel</small>
                    </div>
                </div>
            </div>

            <ul class="sidebar-menu">
                <li class="menu-item active">
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fas fa-chart-pie"></i>
                        <span>Bảng Điều Kiển</span>
                    </a>
                </li>
                <li class="menu-item has-submenu">
                    <a href="#" class="submenu-toggle">
                        <i class="fas fa-cog"></i>
                        <span>Quản lý sản phẩm</span>
                        <i class="fas fa-chevron-right submenu-arrow"></i>
                    </a>
                    <ul class="submenu">
                        <li><a href="@Url.Action("Index", "Products")"><i class="fas fa-list"></i> Danh sách sản phẩm</a></li>
                        <li><a href="@Url.Action("Index", "Categories")"><i class="fas fa-tags"></i> Danh mục</a></li>
                    </ul>
                </li>
                <li class="menu-item has-submenu">
                    <a href="#" class="submenu-toggle">
                        <i class="fas fa-warehouse"></i>
                        <span>Kho hàng</span>
                        <i class="fas fa-chevron-right submenu-arrow"></i>
                    </a>
                    <ul class="submenu">
                        <li><a href="/Warehouse/CheckWarehouse"><i class="fas fa-warehouse"></i> Kiểm tra kho</a></li>
                        <li><a href="/Warehouse/InsertWarehouse"><i class="fas fa-boxes"></i> Nhập hàng</a></li>
                    </ul>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "QLDonHang")">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Quản lý đơn hàng</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "Promotions")">
                        <i class="fas fa-tags"></i>
                        <span>Khuyến mãi</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "Customer")">
                        <i class="fas fa-users"></i>
                        <span>Quản lý khách hàng</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "Report")">
                        <i class="fas fa-chart-bar"></i>
                        <span>Báo cáo & Thống kê</span>
                    </a>
                </li>
                <li class="menu-item">
                    <a href="@Url.Action("Index", "Settings")">
                        <i class="fas fa-cogs"></i>
                        <span>Cài đặt</span>
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <div class="error-indicator">
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <header class="main-header">
                <div class="header-left">
                </div>

                <div class="header-right">
                    <div class="header-actions">
                        <div class="user-profile">
                            <span class="user-name">@tenDangNhap</span>
                            <small class="user-role">@vaiTro</small>
                        </div>
                        <a class="btn btn-primary rounded-pill px-4 py-2 shadow d-flex align-items-center" href="@Url.Action("Logout", "Login")">Thoát</a>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="page-content">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>